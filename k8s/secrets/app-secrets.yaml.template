# IMPORTANT: This is a template file. Copy to app-secrets.yaml and fill in actual values.
# DO NOT COMMIT app-secrets.yaml to version control!
#
# To create the secret:
# 1. Copy this file: cp app-secrets.yaml.template app-secrets.yaml
# 2. Replace all <PLACEHOLDER> values with actual secrets
# 3. Apply: kubectl apply -f app-secrets.yaml
# 4. Delete the file or store securely
#
# For production, use sealed-secrets or external secrets operator

apiVersion: v1
kind: Secret
metadata:
  name: releaf-app-secrets
  namespace: releaf-ai
  labels:
    app: releaf-ai
    component: secrets
type: Opaque
stringData:
  # Monitoring
  JAEGER_ENDPOINT: "<JAEGER_ENDPOINT>"  # e.g., http://jaeger-collector.releaf-ai.svc.cluster.local:14268/api/traces
  SENTRY_DSN: "<SENTRY_DSN>"  # e.g., https://xxxxx@sentry.io/xxxxx
  SLACK_WEBHOOK: "<SLACK_WEBHOOK>"  # e.g., https://hooks.slack.com/services/xxxxx
  PAGERDUTY_KEY: "<PAGERDUTY_KEY>"  # e.g., your-pagerduty-integration-key
  
  # Email Alerting (optional)
  SMTP_HOST: "<SMTP_HOST>"  # e.g., smtp.gmail.com
  SMTP_PORT: "<SMTP_PORT>"  # e.g., 587
  SMTP_USER: "<SMTP_USER>"  # e.g., alerts@releaf.ai
  SMTP_PASSWORD: "<SMTP_PASSWORD>"  # e.g., your-smtp-password
  SMTP_FROM: "<SMTP_FROM>"  # e.g., ReleAF AI Alerts <alerts@releaf.ai>
  ALERT_EMAIL_TO: "<ALERT_EMAIL_TO>"  # e.g., ops@releaf.ai
  
  # API Keys (if needed)
  OPENAI_API_KEY: "<OPENAI_API_KEY>"  # Optional: for GPT-4 comparison
  HUGGINGFACE_TOKEN: "<HUGGINGFACE_TOKEN>"  # Optional: for model downloads
  
  # JWT Secret (for API authentication)
  JWT_SECRET: "<JWT_SECRET>"  # Generate with: openssl rand -base64 32
  JWT_ALGORITHM: "HS256"
  JWT_EXPIRATION: "3600"
  
  # Encryption Keys
  ENCRYPTION_KEY: "<ENCRYPTION_KEY>"  # Generate with: openssl rand -base64 32
---
apiVersion: v1
kind: Secret
metadata:
  name: releaf-db-secrets
  namespace: releaf-ai
  labels:
    app: releaf-ai
    component: database
type: Opaque
stringData:
  # PostgreSQL
  POSTGRES_USER: "<POSTGRES_USER>"  # e.g., releaf_user
  POSTGRES_PASSWORD: "<POSTGRES_PASSWORD>"  # Generate strong password
  
  # Neo4j
  NEO4J_USER: "<NEO4J_USER>"  # e.g., neo4j
  NEO4J_PASSWORD: "<NEO4J_PASSWORD>"  # Generate strong password
  
  # Redis
  REDIS_PASSWORD: "<REDIS_PASSWORD>"  # Generate strong password
  
  # Qdrant (if authentication enabled)
  QDRANT_API_KEY: "<QDRANT_API_KEY>"  # Optional
---
