# ReleAF AI Environment Configuration

# API Configuration
API_HOST=0.0.0.0
API_PORT=8080
API_WORKERS=4

# Service URLs
ORCHESTRATOR_URL=http://localhost:8000
VISION_SERVICE_URL=http://localhost:8001
LLM_SERVICE_URL=http://localhost:8002
RAG_SERVICE_URL=http://localhost:8003
KG_SERVICE_URL=http://localhost:8004
ORG_SEARCH_SERVICE_URL=http://localhost:8005

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=releaf
POSTGRES_USER=releaf_user
POSTGRES_PASSWORD=your_secure_password

# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_secure_password

# Qdrant Configuration (RAG Service)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334
QDRANT_PREFER_GRPC=true
QDRANT_TIMEOUT=30
QDRANT_COLLECTION=sustainability_docs
QDRANT_API_KEY=

# Model Paths
LLM_MODEL_PATH=models/llm/adapters/sustainability-v1
VISION_CLASSIFIER_PATH=models/vision/classifier/best_model.pth
VISION_DETECTOR_PATH=models/vision/detector/best.pt
GNN_MODEL_PATH=models/gnn/ckpts/best_model.pth

# Hugging Face
HF_TOKEN=your_huggingface_token
HF_HOME=~/.cache/huggingface

# Weights & Biases
WANDB_API_KEY=your_wandb_api_key
WANDB_PROJECT=releaf-ai

# Authentication
JWT_SECRET_KEY=your_jwt_secret_key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/releaf.log

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# GPU Configuration
CUDA_VISIBLE_DEVICES=0
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:512

# Data Paths
DATA_DIR=data
RAW_DATA_DIR=data/raw
PROCESSED_DATA_DIR=data/processed
ANNOTATIONS_DIR=data/annotations

# Cache (RAG Service - optimized for mobile)
CACHE_TTL=300
CACHE_SIZE=1000

# RAG Service Configuration
EMBEDDING_MODEL=BAAI/bge-large-en-v1.5
EMBEDDING_DIM=1024
RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2
RERANKING_ENABLED=true
RETRIEVAL_TOP_K=10
RETRIEVAL_TIMEOUT=10

# Service Configuration
PORT=8003
WORKERS=1
MAX_CONCURRENT=100

# Feature Flags
ENABLE_SAFETY_FILTER=true
ENABLE_CONTENT_MODERATION=true
ENABLE_ANALYTICS=true

